<%= form_with(model: task, class: "mb-7") do |form| %>
  <div class="flex items-center">
    <%= form.text_field :description, placeholder: "Add new task", class: "flex-grow px-3 py-2 mr-2 shadow rounded-md border border-gray-200 outline-none" %>
    <%= form.submit "Save", class: "btn bg-blue-600 text-white" %>
  </div>
<% end %>
